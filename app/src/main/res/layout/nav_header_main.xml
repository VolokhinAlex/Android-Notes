<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/image_profile_size"
        android:layout_height="@dimen/image_profile_size"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_from_avatar"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_text"
        android:textSize="@dimen/nav_header_text_size"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_text"
        android:textSize="@dimen/nav_header_text_size_email"
        android:layout_gravity="center"
        android:textColor="@color/white"/>

</LinearLayout>